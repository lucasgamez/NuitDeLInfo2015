<html>

	<head>
		<title>pixi.js example 1</title>
		<style>
			body {
				margin: 0;
				padding: 0;
				background-color: #000000;
			}
		</style>
		<script src="pixi.js"></script>
	</head>

	<body>
	<div id="test" align="center">

		<script>
			var game = new PIXI.Game(800, 600, Phaser.CANVAS, 'phaser-example', { preload: preload, create: create, update: update, render: render });
			// create an new instance of a pixi stage
			var stage = new PIXI.Stage(0x66FF99);
		 
			// create a renderer instance.
			var renderer = PIXI.autoDetectRenderer(800, 600);
		 
			//touches
			var cursors;
			cursors = game.input.keyboard.createCursorKeys();


			// add the renderer view element to the DOM
			document.body.appendChild(renderer.view);
		 
			requestAnimFrame( animate );
		 
			// load texture perso
			var persoT = PIXI.Texture.fromImage("ship.png");

			//init perso
			var perso = new PIXI.Sprite(persoT);


			perso.position.x = 200;
			perso.position.y = 150;

			//Ajoute le perso au stage
			stage.addChild(perso);
		 

			function animate() {
		 
				requestAnimFrame( animate );
		 
				// just for fun, lets rotate mr rabbit a little
				perso.rotation += 0.1;
		 
				// render the stage   
				renderer.render(stage);
			}
/*
